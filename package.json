{
  "name": "virtual_credit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "panda codegen",
    "preinstall": "npx only-allow pnpm",
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "lint:fix": "next lint --fix",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css}'",
    "format:check": "eslint-config-prettier 'src/**/*.{js,jsx,ts,tsx}'",
    "db:generate": "pnpm drizzle-kit generate:mysql --config drizzle.config.ts",
    "db:drop": "drizzle-kit drop --config drizzle.config.ts",
    "db:push": "pnpm with-env node -r esbuild-register src/db/migrate.ts",
    "db:seed": "pnpm with-env node -r esbuild-register src/db/seed.ts",
    "with-env": "dotenv -e .env.development.local --",
    "psdeploy": "pscale deploy-request create virtual-credit-db dev"
  },
  "dependencies": {
    "@clerk/localizations": "^1.22.0",
    "@clerk/nextjs": "^4.21.13",
    "@planetscale/database": "^1.8.0",
    "@types/node": "20.3.3",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@vercel/postgres": "^0.4.0",
    "classnames": "^2.3.2",
    "drizzle-orm": "^0.27.0",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.7",
    "framer-motion": "^10.12.18",
    "next": "13.4.8-canary.14",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "svix": "^1.5.2",
    "typescript": "5.1.6",
    "undici": "^5.22.1"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "dotenv-cli": "^7.2.1",
    "drizzle-kit": "^0.19.3",
    "encoding": "^0.1.13",
    "esbuild-register": "^3.4.2",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8"
  },
  "volta": {
    "node": "18.16.0"
  }
}
