{
  "name": "virtual_credit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "panda codegen",
    "preinstall": "npx only-allow pnpm",
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "lint:fix": "next lint --fix",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css}'",
    "format:check": "eslint-config-prettier 'src/**/*.{js,jsx,ts,tsx}'",
    "db:generate": "pnpm drizzle-kit generate:mysql --config drizzle.config.ts",
    "psconnect": "pscale connect virtual-credit-db dev --port 3309",
    "psdeploy": "pscale deploy-request create virtual-credit-db dev"
  },
  "dependencies": {
    "@clerk/localizations": "^1.18.0",
    "@clerk/nextjs": "^4.21.1",
    "@planetscale/database": "^1.7.0",
    "@types/node": "20.1.0",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@vercel/postgres": "^0.2.1",
    "classnames": "^2.3.2",
    "drizzle-orm": "^0.27.0",
    "eslint": "8.40.0",
    "eslint-config-next": "13.4.1",
    "next": "13.4.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "svix": "^1.4.12",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.3.1",
    "@typescript-eslint/parser": "^5.59.11",
    "drizzle-kit": "^0.19.1",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8"
  },
  "volta": {
    "node": "18.16.0"
  }
}
